<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.sdju.yyh.dao.UserDao" >
    <!-- 查询用户 -->
    <select id="findUser" parameterType="String" resultType="user">
	    select *
	    from sys_user
	    where user_code = #{usercode}
	    and user_password =#{password}
	    and user_state = '1'
    </select>
    
    <select id="selectUserById" parameterType="Integer" resultType="user">
        select *
        from sys_user
        where user_id = #{id}
    </select>

    <select id="findAll" resultType="user">
        select *
        from sys_user
    </select>
    
    <select id="findUserByUsercode" resultType="user" parameterType="String">
        select *
        from sys_user
        where user_code = #{usercode}
    </select>
    
    <insert id="insertUser" parameterType="user">
        insert into sys_user(
        user_code, user_name, user_password, user_state,user_phone
        ) values (
        #{user_code},#{user_name},#{user_password},1,#{user_phone}
        )
    </insert>
    
    <update id="updateUser" parameterType="user">
        update sys_user
        set user_password = #{user_password}
        where user_code = #{user_code}
    </update>
</mapper>
